<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="procura4patas.Utilizador" table="Utilizador" lazy="false">
		<id name="email" column="Email" type="string">
			<generator class="assigned">
			</generator>
		</id>
		<property name="password" column="Password" type="string" length="255" not-null="false" lazy="false"/>
		<property name="nome" column="Nome" type="string" length="255" not-null="false" lazy="false"/>
		<property name="fotografia" column="Fotografia" type="string" length="255" not-null="false" lazy="false"/>
		<property name="concelho" column="Concelho" type="string" length="255" not-null="false" lazy="false"/>
		<property name="telemovel" column="Telemovel" type="string" length="255" not-null="false" lazy="false"/>
		<property name="descricao" column="Descricao" type="string" length="255" not-null="false" lazy="false"/>
		<set name="ORM_Animais" lazy="true" cascade="all-delete-orphan" inverse="false">
			<key column="UtilizadorEmail" not-null="true"/>
			<one-to-many class="procura4patas.Animal"/>
		</set>
		<set name="ORM_ListaPedidos" lazy="true" cascade="all-delete-orphan" inverse="false">
			<key column="UtilizadorEmail" not-null="true"/>
			<one-to-many class="procura4patas.Pedido"/>
		</set>
		<joined-subclass name="procura4patas.Canil" table="Canil" lazy="false">
			<key>
				<column name="UtilizadorEmail"/>
			</key>
			<property name="morada" column="Morada" type="string" length="255" not-null="false" lazy="false"/>
			<property name="horario" column="Horario" type="string" length="255" not-null="false" lazy="false"/>
			<property name="siteOficial" column="SiteOficial" type="string" length="255" not-null="false" lazy="false"/>
			<property name="facebook" column="Facebook" type="string" length="255" not-null="false" lazy="false"/>
			<property name="instagram" column="Instagram" type="string" length="255" not-null="false" lazy="false"/>
		</joined-subclass>
		<joined-subclass name="procura4patas.UtilizadorComum" table="UtilizadorComum" lazy="false">
			<key>
				<column name="UtilizadorEmail"/>
			</key>
		</joined-subclass>
	</class>
</hibernate-mapping>
