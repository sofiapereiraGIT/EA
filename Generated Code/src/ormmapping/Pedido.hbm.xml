<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Pedido" table="Pedido" lazy="false" discriminator-value="Pedido">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<discriminator column="Discriminator" type="string"/>
		<many-to-one name="utilizadorComum" column="`UtilizadorComumUtilizadorE-mail`" class="UtilizadorComum" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<many-to-one name="animal" column="AnimalID" class="Animal" cascade="save-update,lock,delete" unique="true" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="data" column="Data" type="date" not-null="false" lazy="false"/>
		<property name="estado" column="Estado" type="character" length="1" not-null="true" lazy="false"/>
		<property name="dataUltimoContacto" column="DataUltimoContacto" type="date" not-null="false" lazy="false"/>
		<subclass name="Adocao" discriminator-value="Adocao" lazy="false">
		</subclass>
		<subclass name="FAT" discriminator-value="FAT" lazy="false">
		</subclass>
	</class>
</hibernate-mapping>
