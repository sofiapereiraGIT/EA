<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/procura4patas</property>
		<property name="connection.username">p4p</property>
		<property name="connection.password">p4p</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/Animal.hbm.xml" />
		<mapping resource="ormmapping/AnimalPerdido.hbm.xml" />
		<mapping resource="ormmapping/Pedido.hbm.xml" />
		<mapping resource="ormmapping/Utilizador.hbm.xml" />
	</session-factory>
</hibernate-configuration>
