<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/procura4patas</property>
                <!-- UnComment to Deploy
                <property name="connection.url">jdbc:mysql://10.142.0.6:3306/procura4patas</property>
                -->
		<property name="connection.username">p4p</property>
		<property name="connection.password">p4p</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
                <!--
                <property name="connection.pool_size">50</property>
                <property name="c3p0.max_size" value="50"/>
                -->
                <property name="cache.use_second_level_cache">false</property>
                <property name="cache.use_query_cache">false</property>
                <property name="cache.use_minimal_puts">false</property>
		<mapping resource="ormmapping/procura4patas/Animal.hbm.xml" />
		<mapping resource="ormmapping/procura4patas/Pedido.hbm.xml" />
		<mapping resource="ormmapping/procura4patas/Utilizador.hbm.xml" />
           
	</session-factory>
</hibernate-configuration>
